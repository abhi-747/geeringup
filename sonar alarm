#define BUZZER_PIN ___
#define TRIGGER ___
#define ECHO ___
#define BUTTON ___
#define LED_PIN ___
#define THRESHOLD ___
#include<NewPing.h>
// initialize sonar
NewPing sonar(TRIGGER, ECHO, 100);
int distance;
bool detected;
void setup() {
    // initialize pins as INPUT/OUTPUT
    pinMode(BUZZER_PIN, _______);
    pinMode(BUTTON, _______);
    pinMode(LED_PIN, ________);
}
void loop() {
    // measure the distance from the sonar
    distance = sonar.ping_cm();
    // check if there's an object detected
    if ( distance < THRESHOLD && distance > 0 ) {
      detected = true;
    }
    // button turns alarm off
    if ( digitalRead(BUTTON) == HIGH ) {
      detected = false;
    }
    if ( detected == true ){
      // alarm goes off
      analogWrite(BUZZER_PIN, 200);
      digitalWrite(LED_PIN, HIGH);
    }
    else{
      //turn alarm off as soon as button is pressed
      digitalWrite(LED_PIN, LOW);
      analogWrite(BUZZER_PIN, 0);
    }
}
