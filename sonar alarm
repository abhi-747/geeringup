#define BUZZER_PIN ___
#define TRIGGER ___
#define ECHO ___
#define BUTTON ___
#define LED_PIN ___
#define THRESHOLD ___

#include <NewPing.h>

// initialize sonar
NewPing sonar(TRIGGER, ECHO, 100);
int distance;

void setup() {
// initialize pins as INPUT/OUTPUT
    pinMode(BUZZER_PIN, ______);
    pinMode(BUTTON, ______);
    pinMode(LED_PIN, ______);
}

void loop() {
    // measure the distance from the sonar
    distance = sonar.ping_cm();

    // object is inside threshold
    if (distance > 0 && distance < THRESHOLD) {
        // check if button is pressed to silence alarm
        if (digitalRead(BUTTON) == HIGH) {
            // alarm silenced
            digitalWrite(LED_PIN, LOW);
            analogWrite(BUZZER_PIN, 0);
        } else {
            // alarm active
            digitalWrite(LED_PIN, HIGH);
            analogWrite(BUZZER_PIN, 200);  // see note about buzzer pin
        }
    }
    // object is outside threshold or not detected
    else {
        digitalWrite(LED_PIN, LOW);
        analogWrite(BUZZER_PIN, 0);
    }
}
